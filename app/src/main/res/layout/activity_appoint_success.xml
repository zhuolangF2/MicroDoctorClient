<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/ll_doctor_list_top"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/steelblue"
            android:layout_height="40dp">
        <ImageView
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_appoint_success_back"
                android:src="@drawable/back01"/>
        <TextView
                android:text="恭喜你，预约成功"
                android:textSize="20dp"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:background="#fcfbfb"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="  我的名字 "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_appoint_user_nam"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="13dp"
            android:text="昵称"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="#fcfbfb"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="  预约的医生 "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_appoint_doctornam"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="13dp"
            android:text="昵称"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="#fcfbfb"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="  病症 "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_appoint_dis"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="13dp"
            android:text="昵称"
            android:textSize="18dp"
            android:singleLine="false"
            android:maxLength="63"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="#fcfbfb"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="  预约的时间 "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_appoint_seetim"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="13dp"
            android:text="昵称"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
