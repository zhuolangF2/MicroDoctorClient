<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dee4ec">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:background="#5888e7"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/image_shdotinfo_back"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@drawable/back01"
                android:layout_width="65dp"
                android:layout_height="28dp" />
            <TextView
                android:text="个人信息"
                android:textSize="20dp"
                android:textColor="#fffff1"
                android:layout_marginLeft="22dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  头像 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/myicon"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  昵称 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_nickname"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="昵称"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  账号 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_acount"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="账号"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  姓名 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_name"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="姓名"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  手机号 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_phone"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="手机号"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  年龄 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_age"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="年龄"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  性别 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_gender"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="性别"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  地址 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_address"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="地址"
                android:textSize="18dp"
                android:maxLength="27"
                android:singleLine="false"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  个性签名 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_signature"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="个性签名"
                android:textSize="18dp"
                android:maxLength="45"
                android:singleLine="false"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  个人简介 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_introduction"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="个人简介"
                android:textSize="18dp"
                android:maxLength="45"
                android:singleLine="false"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_showinfo_hospt"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  所属医院 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_hospital"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="所属医院"
                android:textSize="18dp"
                android:maxLength="27"
                android:singleLine="false"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_showinfo_office"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  科室 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_office"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="科室"
                android:textSize="18dp"
                android:maxLength="18"
                android:singleLine="false"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_showinfo_amount"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#fcfbfb"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="  接诊量 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shdot_amount"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="13dp"
                android:text="接诊量"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_show_doctorinfo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/button_back"
            android:text="修改信息"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

</ScrollView>
