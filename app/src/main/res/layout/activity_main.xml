<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <!--底部tab-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >
<!--运用自定义的控件和属性-->
        <com.zhuolang.main.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="5dp"
            hyman:icon="@drawable/ic_menu_start_conversation"
            hyman:color="#FF3098EF"
            hyman:text="@string/tab_homepage"
            hyman:text_size="15sp"
            android:layout_weight="1"/>

        <com.zhuolang.main.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="5dp"
            hyman:icon="@drawable/ic_menu_allfriends"
            hyman:color="#FF3098EF"
            hyman:text="@string/tab_share"
            hyman:text_size="15sp"
            android:layout_weight="1"/>

        <com.zhuolang.main.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="5dp"
            hyman:icon="@drawable/ic_menu_emoticons"
            hyman:color="#FF3098EF"
            hyman:text="@string/tab_me"
            hyman:text_size="15sp"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>
